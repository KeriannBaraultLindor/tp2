<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Mon Application</title>
  <style type="text/css">
    body{
      font-family: arial;
    }

    form{
      display: table-caption;
    }

    button{
      margin: 0 auto;
      width: 173px;
    }

    ul{
      list-style: none;
      padding: 0px;
    }

    li{
      margin-bottom: 10px;
    }

    li:nth-child(odd){
      background-color: aliceblue;
    }
  </style>
</head>
<body>
  Node.js, Express et MongoDB.
  <button id='update'>Mise à jour téléphone</button>
    <form action="/adresse" method="POST">
    <input type="text" placeholder="prénom" name="prenom">
    <input type="text" placeholder="nom" name="nom">
    <input type="text" placeholder="Telephone" name="telephone">
    <input type="text" placeholder="Ville" name="ville">
    <input type="text" placeholder="Code Postal" name="codepostal">
    <button type="submit">Submit</button>
  </form>

  <ul class="adresse">
  <% for(var i=0; i<adresse.length; i++) {%>
    <li class="client">
      <span><%= adresse[i].prenom %></span>
      <span><%= adresse[i].nom %></span>
      <span><%= adresse[i].telephone %></span>
      <span><%= adresse[i].ville %></span>
      <span><%= adresse[i].codepostal %></span>
    </li>
  <% } %>
  </ul>
  <script type="text/javascript" src="modifier_adresse.js"></script>

</body>
</html>

